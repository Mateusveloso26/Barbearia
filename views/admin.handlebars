<section class="admin">
    <h1 class="titulo">Confira os agendamentos</h1>
    <table class="tabela">
        <thead>
            <tr>
                <th>Nome:</th>
                <th>Telefone:</th>
                <th>Data:</th>
                <th>Horário:</th>
                <th>Serviço:</th>
                <th>Operações:</th>
            </tr>
        </thead>
        <tbody>
            {{#each agendamentos}}
            <tr>
                 <td><input type="text" name="nome" placeholder="Nome" value="{{nome}}"></td>
                <td><input type="tel" name="telefone" placeholder="Telefone" value="{{telefone}}"></td>
                <td><input type="date" name="data" value="{{data}}"></td>
                <td><input type="time" name="horario" value="{{horario}}"></td>
                <td><input type="text" name="servico" placeholder="Serviço" value="{{servico}}"></td>

                <td>
                    <a href="/atualizar/{{id}}"><i class="fa-solid fa-pen"></i></a>
                    <a href="/deletar/{{id}}"
                        onclick="return confirm('Tem certeza que deseja excluir este agendamento?');"><i
                            class="fa fa-trash"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>